<% if @article.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <h2 class="alert-heading">The following errors prevented the article from being saved</h2>
      <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>

  </div>
<% end %>