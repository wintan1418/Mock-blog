<h1 class="text-center mt-4"> Categories</h1>

<div class="container">
<div class="row justify-content-center">
  <div class="col-10">
  <%= render 'shared/errors',obj:@category %>
    <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-secondary rounded", local: true) do |f| %>
      <div class="form-group row">
        <%= f.label :name, "Category name", class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.text_field :name, class: "form-control shadow rounded mb-3", placeholder: "category of article" %>
        </div>
    </div>

  <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-sm" %>
        </div>
      <% end %>
    </div>
    <div class="mb-3 description">
      <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-info justify-content-center description" %>
      </div>
      </div>
</div> 

