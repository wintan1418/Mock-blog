<h2 class= "text-center mt-4"><%= @article.title %> </h2>
  <div id = "page-content">
    <div class="container">
    
      <div class="row justify-content-md-center">
      <div class="col-8 mt-4">

          <div class="card text-center shadow mb-5 bg-white rouded">
            <div class="card-header font-italic">
              Oluwadare wintan
            </div>
            <div class="card-body">
              <p class="card-text"><%=simple_format (@article.description)  %></p>
              <%= link_to "edit", edit_article_path(@article), class: "btn btn-outline-primary" %>
              <%= link_to "delete", article_path(@article), class: "btn btn-outline-danger",method: :destroy, data: {confirm: "Are you sure?"} %>
            </div>
          </div>
      </div>
      </div>
    </div>
</div>
